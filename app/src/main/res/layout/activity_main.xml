<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
       android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_sman">
    </TextView>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtText_Name"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@drawable/field"
            android:layout_marginTop="20dp"
            android:hint="Name"
            android:textColorHint="#000"
            android:paddingLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true">
        </EditText>

        <EditText
            android:id="@+id/edtText_Position"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@drawable/field"
            android:layout_marginTop="100dp"
            android:hint="Position"
            android:textColorHint="#000"
            android:paddingLeft="30dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true">
        </EditText>

        <EditText
            android:id="@+id/edtText_Branch"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@drawable/field"
            android:layout_marginTop="180dp"
            android:hint="Branch"
            android:textColorHint="#000"
            android:paddingLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true">
        </EditText>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:background="@drawable/pic"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp">
        </ImageView>

        <Button
            android:id="@+id/btn_profilePic"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:background="@drawable/btn_pic"
            android:layout_marginTop="50dp">
        </Button>

    </RelativeLayout>
    <Button
        android:id="@+id/btn_generateID"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/gid">

    </Button>
</LinearLayout>